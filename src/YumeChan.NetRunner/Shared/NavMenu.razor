<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">@Properties.AppProperties.AppName</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="botcontrols" Match="NavLinkMatch.All">
                    <span class="oi oi-wrench" aria-hidden="true"></span> Bot Controls
                </NavLink>
            </li>

            <li class="nav-item px-3">
                <NavLink class="nav-link" href="botplugins" Match="NavLinkMatch.All">
                    <span class="oi oi-puzzle-piece" aria-hidden="true"></span> Bot Plugins
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}
